<h1>Skate Park</h1>

<div class="py-4">
  <h2>Registro</h2>
  <hr class="w-50" />

  <form id="form_regisro">
    <div class="form-group row w-50 m-auto">
      <div class="form-group col-12 col-sm-6">
        <label for="email">Email</label>
        <input id="email" class="form-control m-auto"/>
        <div class="error"></div>
      </div>
      <div class="form-group col-12 col-sm-6">
        <label for="nombre">Nombre</label>
        <input id="nombre" class="form-control m-auto" />
        <div class="error"></div>
      </div>
      <div class="form-group col-12 col-sm-6">
        <label for="password">Password</label>
        <input id="password" class="form-control m-auto" />
        <div class="error"></div>
      </div>
      <div class="form-group col-12 col-sm-6">
        <label for="repassword">Repita la password</label>
        <input id="repassword" class="form-control m-auto" />
        <div class="error"></div>
      </div>
      <div class="form-group col-12 col-sm-6">
        <label for="aniosExperiencia">Años de experiencia</label>
        <input id="aniosExperiencia" class="form-control m-auto" />
        <div class="error"></div>
      </div>
      <div class="form-group col-12 col-sm-6">
        <label for="especialidad">Especialidad</label>
        <input id="especialidad" class="form-control m-auto" />
        <div class="error"></div>
      </div>
      <div class="form-group col-12 col-sm-12">
        <label for="fotoPerfil">Foto de perfil</label>
        <input id="fotoPerfil" type="file" />
        <div class="error"></div>
      </div>
    </div>
    <button type="submit" class="btn btn-info mb-3">Registrarme</button>
    <p><a href="http://localhost:3001/login"> Iniciar sesión</a></p>
  </form>
</div>
<script src="/js/registro.js"></script>